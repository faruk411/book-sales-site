@model IEnumerable<Product>


<div class="text-center">
    <div class="display-6">
        Ürünler
    </div>
    <div class="d-flex justify-content-end my-3 ">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa-solid fa-plus"></i>
            Ürün Oluştur</a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Resim</th>
                <th>Ürün Adı</th>
                <th>Fiyat</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Product prd in Model)
            {
                <tr >
                    <td >@prd.ProductId</td>
                    <td >
                        <img class="rounded shadow" width="50" height="50" src="@prd?.ImageUrl" alt="@prd?.ProductName" />
                    </td>
                    <td class="align-items-center">@prd.ProductName</td>
                    <td class="align-items-center">@prd.Price.ToString("c")</td>
                    <td>
                        <div class="btn-group " >
                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@prd.ProductId">
                                <i class="fa fa-edit"></i>
                                Güncelle</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@prd.ProductId">
                                <i class="fa-solid fa-trash"></i>
                                Sil
                            </a>
                            <a class="btn btn-info" target="_blank" asp-area="" asp-controller="Product" asp-action="Get" asp-route-id="@prd.ProductId">
                                <i class="fa fa-search"></i>
                                Web
                            </a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


