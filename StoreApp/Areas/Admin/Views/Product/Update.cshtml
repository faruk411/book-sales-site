@model ProductDtoForUpdate



<div class="text-center">
    <div class="display-6">Güncelle</div>
</div>

<form method="post" asp-action="Update" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId">
        </select>
    </div>
    <input type="hidden" asp-for="ProductId" />
    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Yayıncı"></label>
        <input asp-for="Yayıncı" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Yazar"></label>
        <input asp-for="Yazar" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group my-3">
        <img class="rounded shadow" width="150" src="@Model?.ImageUrl" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input type="file" name="file"  class="form-control" />
    </div>
    <div class="form-group my-3">
        <div class=" btn-group">
          <button class="btn btn-primary" type="submit">
                <i class="fa-solid fa-hard-drive"></i>
              Güncelle</button>
              <a asp-action="Index" class="btn btn-outline-primary">
                  <i class="fa fa-list"></i>
                  Ürünller</a>
        </div>
    </div>
</form>