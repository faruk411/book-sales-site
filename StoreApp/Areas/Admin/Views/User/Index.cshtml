@model IEnumerable<IdentityUser>

<div class="text-center my-5">
    <div class="display-6">Kullaıcılar</div>
</div>
<div class="d-flex justify-content-end my-3 ">
    <a class="btn btn-outline-success" asp-action="Create">
        <i class="fa-solid fa-plus"></i>
        Kullanıcı Oluştur
    </a>
</div>
<table >
    <thead>
        <tr>
            <th>Id</th>
            <th>Kullanıcı Adı</th>
            <th>Rolü</th>
            <th>Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach(IdentityUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>-</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn btn-warning rounded-0" asp-action="Update" asp-route-id="@user.UserName">Güncelle</a>
                        <a class="btn btn btn-info rounded-0" asp-action="ResetPassword" asp-route-id="@user.UserName">Parolayı sıfırla</a>
                        <form method="post"  asp-action="DeleteOneUser" >
                            <input type="hidden" name="UserName" value="@user.UserName" />
                            <button type="submit" class="btn btn-danger rounded-0"> 
                                <i class="fa fa-solid fa-trash"></i>
                                Sil
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>